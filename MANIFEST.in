# Include documentation and configuration files
include README.md
include LICENSE
include pyproject.toml

# Include all schema and OpenAPI files
recursive-include autogensocial_contracts/schemas *.json
recursive-include autogensocial_contracts/openapi *.yaml *.yml

# Include generated model files
recursive-include autogensocial_contracts/models *.py

# Exclude development and build files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
exclude scripts/
recursive-exclude scripts/ *
exclude tests/
recursive-exclude tests/ *